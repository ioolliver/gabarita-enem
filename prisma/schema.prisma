generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Question {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  command      String
  area         String
  correct      Int
  identifier   String @default("")
  year         Int
  abilityCode  Int
  options      String[]
  languageType Int      @default(0)
  preCommand   String   @default("")
}

model List {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  abilityFilter  Int[]
  area           String
  languageFilter Int
  ownerId        String
  questions      String[]
  createdAt      DateTime @default(now())
}

model Answer {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userId     String
  questionId String
  marked     Int
  correct    Int
  createdAt  DateTime @default(now())
}
